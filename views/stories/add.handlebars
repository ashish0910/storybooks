<h1>Add Story</h1>
<div class="row">
    <form action="/stories" class="col s12" method="POST">
        <div class="row">
            <div class="input-feild">
                <input type="text" name="title">
                <label for="title">Title</label>
            </div>
        </div> 
        <div class="row">
            <div class="input-feild">
                <select name="status">
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                    <option value="unpublished">Unpublished</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div> 
        <div class="row">
            <p>
                <input type="checkbox" name="allowComments" id="filled-in-box" class="filled-in" checked="checked">
                <label for="filled-in-box">Allow Comments</label>
            </p>
        </div> 
        <div class="row">
            <div class="input-feild">
                <h5>Tell Us Your Story:</h5>
                <textarea name="body"></textarea>
            </div>
        </div> 
        <input type="submit" value="save" class="btn">
    </form>
</div>